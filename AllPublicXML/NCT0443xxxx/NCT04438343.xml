  <brief_title>Impairment-Specific and Augmented Intervention on Turning</brief_title>
  <official_title>Effects of Impairment-Specific and Augmented Intervention on Turning Performance in Individuals With Chronic Stroke</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>National Yang Ming University</agency>
      <agency_class>Other</agency_class>
