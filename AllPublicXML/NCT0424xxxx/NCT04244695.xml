  <brief_title>Oral Steroid in Controlling Pain After TKA</brief_title>
  <official_title>Efficacy of Oral Corticosteroid in Controlling Pain After Total Knee Arthroplasty: A Randomized Controlled Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Thammasat University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
