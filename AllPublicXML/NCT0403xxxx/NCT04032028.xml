  <brief_title>Same-Day Antiretroviral Therapy Initiation</brief_title>
  <official_title>The Thai Red Cross AIDS Research Centre</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Thai Red Cross AIDS Research Centre</agency>
