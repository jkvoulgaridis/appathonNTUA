  <primary_outcome>
    <measure>presence or absence of malnutrition</measure>
    <time_frame>The inclusion day</time_frame>
    <description>presence or absence of malnutrition based on BMI and / or percentage of weight loss</description>
  </primary_outcome>
  <primary_outcome>
