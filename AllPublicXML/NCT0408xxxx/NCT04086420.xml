  <brief_title>Mindfulness-Based Physical Activity Intervention</brief_title>
  <official_title>A Mindfulness-Based Physical Activity Intervention: A Randomized Pilot Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Southern Methodist University</agency>
      <agency_class>Other</agency_class>
