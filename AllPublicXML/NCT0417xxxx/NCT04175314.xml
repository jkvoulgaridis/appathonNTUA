  </secondary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">240</enrollment>
  <condition>Periodontal Recessions</condition>
  <arm_group>
    <arm_group_label>Case -</arm_group_label>
    <description>Patient presenting one or more periodontal recession more than 1mm of height</description>
  </arm_group>
  <arm_group>
