  <primary_outcome>
    <measure>Evaluation of periodontal recession severity</measure>
    <time_frame>Observation at day 1</time_frame>
    <description>Measure of the height and the width of periodontal recession (millimeter)</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Number of recessions for each patient</measure>
    <time_frame>Observation at day 1</time_frame>
