  <primary_outcome>
    <measure>Rate of patients with at least one medication error for chronic treatment</measure>
    <time_frame>48 hours post-admission</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Nature of medication error</measure>
    <time_frame>48 hours post-admission</time_frame>
