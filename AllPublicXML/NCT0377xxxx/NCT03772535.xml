  <brief_title>Pharmacogenetics for Pain Management in Joint Replacement Patients</brief_title>
  <acronym>PGx</acronym>
  <official_title>Using Pharmacogenetics to Structure Individual Pain Management Protocols for Joint Replacement Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Anderson Orthopaedic Research Institute</agency>
      <agency_class>Other</agency_class>
