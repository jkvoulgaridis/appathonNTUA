  <primary_outcome>
    <measure>remifentanil infusion dose</measure>
    <time_frame>from pneumoperitoneum to removal of laparoscope</time_frame>
    <description>remifentanil infusion using target effect-site concentration to achieve an surgical pleth index of range between 20 and 50</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">134</enrollment>
  <condition>Hernia Abdominal Wall</condition>
